cd web

echo -e '\n    🏗️👷 Styling, testing and building your project before committing \n'
echo -e '🚧 Checking Prettier formatting...\n'

# Check Prettier standards
npm run check-prettier ||
(
    echo '❌ Prettier failed in checking. Run "npm run prettier-fix" to let prettier format your files.';
    false;
)

echo -e '✅ Prettier formatting complete. (1/4)\n'
echo -e '🚧 Running your tests...\n'

# Run tests
npm run test ||
(
    echo '❌ Not all your tests passed.';
    false;
)

echo -e '✅ Testing complete. (2/4)\n'
echo -e '🚧 Checking ESLint...\n'

# Check ESLint Standards
npm run check-lint ||
(
        echo '❌ ESLint failed in checking. Run "npm run lint-fix" to fix the issues. If theyare not addressed automatically, please address them manually and try to commit again.'
        false; 
)

echo -e '✅ ESLint check complete. (3/4)\n'
echo -e '🚧 Building your application...\n'

npm run build ||
(
    echo '❌ Build failed. Please address the issues above and try to commit again.'
    false;
)


# If everything passes... Now we can commit
echo -e '✅ All checks completed. (4/4)\n'
echo -e 'Committing... \n'